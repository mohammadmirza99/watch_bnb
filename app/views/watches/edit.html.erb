<%= form_for(@watch) do |f| %>
  <div class="form-group">
    <%= f.label :model %>
    <%= f.text_field :model, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :brand %>
    <%= f.text_field :brand, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.check_box :material %>
    <%= f.label :material, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.check_box :price %>
    <%= f.label :price, class: 'form-control' %>
  </div>
  <%= f.submit "Edit", class: 'btn btn-primary' %>
<%end%>
