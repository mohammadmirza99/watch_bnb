<div class="dashboard-container">
    <div class="dashboard-sidebar">
      <%= render 'shared/sidebar' %>
    </div>
</div>


<div class="container-watch">
  <% @watches.each do |watch| %>
    <% if watch.user == current_user  %>
      <div class="card_user_watch">


        <div class="column-img">
            <%= cl_image_tag watch.image_url.key, crop: :fill %>
        </div>

        <div class="content-watch">
          <div class="title border-bottom">
            <h3><%= watch.brand %></h3>
          </div>
          <div class="info">
            <h5><%= watch.model %></h5>
            <h5><%= watch.material %></h5>
            <h5><%= watch.price %></h5>
          </div>

          <div class="inline-btn">

            <button class="button">
              <%= link_to "Edit", edit_watch_path(watch.id) %>
            </button>

            <button class="button">
              <%= link_to "Delete", watch_path(watch), method: :delete %>
            </button>

          </div>

        </div>
      </div>
    <%end%>
  <% end%>
</div>

