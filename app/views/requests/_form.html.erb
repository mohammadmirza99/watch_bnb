


<div class="wrapper">
  <div class="edit-form">
    <div class="input-field">
      <%= simple_form_for [@watch, @request] do |f| %>

      <div class="input-field">
        <i class="fas fa-table"></i>
        <%= f.input :date_start, as: :date, order: [:day, :month, :year] %>
      </div>

      <div class="input-field">
        <i class="fas fa-table"></i>
        <%= f.input :date_end, as: :date, order: [:day, :month, :year] %>
      </div>

      <div>
        <%= f.submit "Edit", class: 'button' %>
      </div>

      <%end%>
    </div>
  </div>
</div>
