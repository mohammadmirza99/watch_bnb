<!-- this html contain represent the cards in the home page by augustin -->
<div class="container">
  <h1>All our watches</h1>

  <% @watches.each do |watch| %>
    <div class="card-user">

      <div class="card-image">
        <%# if watch.image_url.attached? %>
          <img src="https://res.cloudinary.com/dkpy2yoeq/image/upload/v1582817022/GHxz53Rryvj58zTtGx7o9q3t.jpg" alt="">
        <%# else %>
          <%#= cl_image_path watch.image_url.key, crop: :fill %>
        <%# end %>
      </div>

      <div class="content-watch">
        <div class="row1">
          <div>
            <h6><%= watch.brand %> <br> <%= watch.model %></h6>
          </div>

          <div>
            <p> <%= watch.price %> $</p>
          </div>
        </div>

        <div class="row2">

          <%#  <div> <h6> Material :</h6> <p><%= watch.material  </p> </div> %>


          <div>
            <button class="button-user" onclick="window.modalClick('test1', 'test2', 'https://images.rolex.com/2019/catalogue/images/upright-bba-with-shadow/m116613lb-0005.png?imwidth=1024')">Reserve</button>
          </div>

        </div>

      </div>

    </div>
  <% end %>
</div>

