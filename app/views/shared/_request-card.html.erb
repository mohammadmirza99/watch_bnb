
<% @requests.each do |request| %>
<div class="card-product">
  <img src="https://images.unsplash.com/photo-1541163749385-a9363e70e07e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=975&q=80" />
  <div class="card-product-infos">
    <h2>Watch requested</h2>
    <p><strong>Brand:<%= request.watch.brand %></strong></p>
    <p><strong>Model:<%= request.watch.model %></strong></p>
    <p><strong>Date from: <%= request.date_start %></strong></p>
    <p><strong>Date to: <%= request.date_end %></strong></p>

  </div>
</div>
<% end %>
