<%= render 'shared/banner' %>

<div class="homepage-container">
  <h1>Trending</h1>
  <% @watches.each do |watch| %>
  <div class="d-flex justify-content-between container" id = "homepage-card">
      <div class="p-2">
        <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="https://static.patek.com/images/articles/banner/1600/5131_1P_001_1@2x.jpg" alt="Card image cap">
        <div class="card-body">
        <h5 class="card-title"><%= watch.brand %> <%= watch.model %></h5>
        <p class="card-text"><%= watch.price %>$/day</p>
        <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
        <%= link_to "Book Watch", new_watch_request_path(watch.id)%>
      </div>
    </div>
  </div>
  <% end %>
</div>





