<!-- body container added, for layout purpose. nav-bar is fixed to the top -->
<div class="container-body">
  <main role="main">
    <div class="jumbotron">
    <h1 class="display-4">Welcome to WatchBnb</h1>
    <p class="lead">Find the perfect watch for the occasion</p>
    <div class="container h-100">
          <div class="d-flex justify-content-center h-100">
            <div class="searchbar">
              <input class="search_input" type="text" name="" placeholder="Search...">
              <a href="#" class="search_icon"><i class="fas fa-search"></i></a>
            </div>
          </div>
    </div>
  </div>
    <div class="album py-5 bg-light">
      <div class="container">
        <h1>Trending</h1>
        <div class="row">
          <% @watches.each do |watch| %>
    <div class="card-user">

      <div class="card-image">
        <%# if watch.image_url.attached? %>
          <img src="https://res.cloudinary.com/dkpy2yoeq/image/upload/v1582817022/GHxz53Rryvj58zTtGx7o9q3t.jpg" alt="">
        <%# else %>
          <%#= cl_image_path watch.image_url.key, crop: :fill %>
        <%# end %>
      </div>

      <div class="content-watch">
        <div class="row1">
          <div>
            <h6><%= watch.brand %> <br> <%= watch.model %></h6>
          </div>

          <div>
            <p> <%= watch.price %> $</p>
          </div>
        </div>

        <div class="row2">

          <%#  <div> <h6> Material :</h6> <p><%= watch.material  </p> </div> %>


          <div>
            <%= link_to "Book", new_watch_request_path(watch.id), class:"button-user" %>
          </div>

        </div>

      </div>

    </div>
  <% end %>
        </div>
      </div>
    </div>
  </main>

</div>
